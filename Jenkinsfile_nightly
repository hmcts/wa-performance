#!groovy

properties([
        pipelineTriggers([cron('00 21 * * *')]),
        parameters([
                string(name: 'BaseURL', defaultValue: 'https://', description: 'The Base Url'),
        ])
])

@Library("Infrastructure") 

def product = "wa"
def component = "wa-performance-tests"

def secrets = [
    // 's2s-aat': [
    //     secret('microservicekey-rd-professional-api', 'S2S_SECRET')
    // ],
    // 'rd-aat': [
    //     secret('OAUTH2-CLIENT-SECRET', 'OAUTH2_CLIENT_SECRET')
    // ],
    'ccd-aat': [
        secret('ccd-api-gateway-oauth2-client-secret', 'CCD_CLIENT_SECRET')
    ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [$class     : 'AzureKeyVaultSecret',
     secretType : 'Secret',
     name       : secretName,
     version    : '',
     envVariable: envVar
    ]
}

withNightlyPipeline("java", product, component) {
    loadVaultSecrets(secrets)
    //env.BaseURL = 'https://'

    //enablePerformanceTest()

    after('performanceTest') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
    }

    //enableSlackNotifications('#jui-nightly-builds')

}
